<Uintah_specification>
  <Meta>
    <title>Test of 1D transport of kokkos-ized scalars - Pure convection </title>
  </Meta>

  <SimulationComponent type="arches" />

  <Solver type="hypre" />

  <Time>
    <maxTime>100.</maxTime>
    <initTime>0.0</initTime>
    <delt_min>1e-5</delt_min>
    <delt_max>1e-1</delt_max>
    <delt_init>1e-1</delt_init>
    <timestep_multiplier>0.3</timestep_multiplier>
    <max_Timesteps>50</max_Timesteps>
  </Time>

  <DataArchiver>
    <filebase>x-handoff-minus.uda</filebase>
    <outputInterval>0.1</outputInterval>
    <outputInitTimestep />
    <save label="cc_phi_upwind" />
    <save label="cc_phi_vanleer" />
    <save label="phi_handoff" />
    <checkpoint cycle="2" interval=".3" />
    <compression>gzip</compression>
  </DataArchiver>

  <Grid>
    <Level>
      <Box label="1">
        <lower>[0,0,0]</lower>
        <upper>[1.0,1.0,1.0]</upper>
        <resolution>[24,24,24]</resolution>
        <extraCells>[1,1,1]</extraCells>
        <patches>[1,1,1]</patches>
      </Box>
      <periodic>[0,0,0]</periodic>
    </Level>
    <BoundaryConditions>
      <DefaultMaterial>all</DefaultMaterial>
      <Face side="x-">
        <BCType label="cc_phi_upwind" type="handoff" var="Custom">
          <value>phi_handoff</value>
        </BCType>
        <BCType label="cc_phi_vanleer" type="handoff" var="Custom">
          <value>phi_handoff</value>
        </BCType>
      </Face>
      <Face side="x+">
        <BCType label="cc_phi_upwind" var="Neumann">
          <value>0.</value>
        </BCType>
        <BCType label="cc_phi_vanleer" var="Neumann">
          <value>0.</value>
        </BCType>
      </Face>
      <Face side="y-">
        <BCType label="cc_phi_upwind" var="Neumann">
          <value>0.</value>
        </BCType>
        <BCType label="cc_phi_vanleer" var="Neumann">
          <value>0.</value>
        </BCType>
      </Face>
      <Face side="y+">
        <BCType label="cc_phi_upwind" var="Neumann">
          <value>0.</value>
        </BCType>
        <BCType label="cc_phi_vanleer" var="Neumann">
          <value>0.</value>
        </BCType>
      </Face>
      <Face side="z-">
        <BCType label="cc_phi_upwind" var="Neumann">
          <value>0.</value>
        </BCType>
        <BCType label="cc_phi_vanleer" var="Neumann">
          <value>0.</value>
        </BCType>
      </Face>
      <Face side="z+">
        <BCType label="cc_phi_upwind" var="Neumann">
          <value>0.</value>
        </BCType>
        <BCType label="cc_phi_vanleer" var="Neumann">
          <value>0.</value>
        </BCType>
      </Face>
    </BoundaryConditions>
  </Grid>

  <PhysicalConstants>
    <gravity>[0,0,0]</gravity>
    <reference_point>[0,0,0]</reference_point>
    <viscosity>0.0002</viscosity>
  </PhysicalConstants>

  <CFD>
    <ARCHES>

      <TimeIntegrator order="1">
        <ExplicitIntegrator order="first" />
      </TimeIntegrator>

      <VarID>
        <var label="uVel" role="uvelocity" />
        <var label="vVel" role="vvelocity" />
        <var label="wVel" role="wvelocity" />
        <var label="gamma" role="total_viscosity" />
        <var label="density" role="density" />
      </VarID>

      <Properties>
        <table label="a_user_generated_label" type="constant"><ConstantProps>
          <temperature>298.</temperature>
          <density>298.</density>
        </ConstantProps>
      </table></Properties>

      <PropertyModelsV2>
        <model label="density" type="constant_property">
          <grid type="CC" />
          <value>1.</value>
        </model>
        <model label="gamma" type="constant_property">
          <grid type="CC" />
          <value>1.e-4</value>
        </model>
        <model label="uVel" type="constant_property">
          <grid type="FX" />
          <value>0.9</value>
        </model>
        <model label="vVel" type="constant_property">
          <grid type="FY" />
          <value>0.</value>
        </model>
        <model label="wVel" type="constant_property">
          <grid type="FZ" />
          <value>0.</value>
        </model>
      </PropertyModelsV2>

      <KScalarTransport>

        <eqn_group label="CCFields" type="CC">

          <eqn label="cc_phi_upwind">
            <convection scheme="upwind" />
          </eqn>
          <eqn label="cc_phi_vanleer">
            <convection scheme="vanleer" />
          </eqn>

        </eqn_group>

      </KScalarTransport>

      <BoundaryConditions>
        <force_area_calc />
        <bc label="phi_handoff" type="handoff">
          <filename>inputs/ARCHES/kokkos_solver_tests/handoff/phi_handoff.txt</filename>
          <relative_xyz>[0, .5, .5]</relative_xyz>
          
          <default label="cc_phi_upwind" type="dirichlet" value="1.5" />
        </bc>
      </BoundaryConditions>

      <KokkosSolver>
      </KokkosSolver>

    </ARCHES>
  </CFD>
</Uintah_specification>